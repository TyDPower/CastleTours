<div>
    @for (var i = 0; i < 5; i++)
    {
        if (RatingValue - count > 0)
        {
            <span>
                <i class="fa fa-star text-warning"></i>
            </span>
            count++;
        }
        else
        {
            <span>
                <i class="fa fa-star text-gray-300"></i>
            </span>
        }
    }
</div>


@code {
    [Parameter] public int RatingValue { get; set; }
    int count = 0;
}
