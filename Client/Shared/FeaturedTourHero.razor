@inject ITourService TourService

<!-- Slider main container-->
    <div class="swiper-container home-slider multi-slider">
      <!-- Additional required wrapper-->
      <div class="swiper-wrapper">
        <!-- Slides-->
        <div class="swiper-slide bg-cover dark-overlay" style="background-image: url('@featured.TourImageUrl');">
          <div class="container h-100">
            <div class="d-flex h-100 text-white overlay-content align-items-center" data-swiper-parallax="-500">
              <div class="w-100">
                <div class="row">
                  <div class="col-lg-6">
                    <p class="subtitle text-white letter-spacing-3 mb-3 font-weight-light">Most besieged castle in Europe</p>
                    <h2 class="display-3 fw-bold mb-3" style="line-height: 1">@featured.CastleName</h2>
                    <a class="btn btn-outline-light d-none d-sm-inline-block" href="./tour/@featured.TourId">
                        Start exploring <i class="fa fa-angle-right ms-2"></i>
                    </a>
                  </div>
                  <div class="col-lg-6 ps-lg-5 my-3 my-md-5 my-lg-0">
                      <a class="d-flex text-reset text-decoration-none hover-animate mb-2 mb-md-5" href="/configureTicket">
                          <div class="icon-rounded bg-white opacity-7 flex-shrink-0 me-4">
                              <i class="fa-solid fa-ticket icons ticket"></i>
                          </div>
                          <div>
                            <h5>Tickets</h5>
                            <div class="badge badge-light">from @featured.TourBasePrice</div>
                          </div>
                      </a>
                      <a class="d-flex text-reset text-decoration-none hover-animate mb-2 mb-md-5" href="/experience/experienceId">
                          <div class="icon-rounded bg-white opacity-7 flex-shrink-0 me-4">
                            <i class="fa-solid fa-suitcase icons"></i>
                          </div>
                          <div>
                            <h5>Experience</h5>
                            <div class="badge badge-light">from @featured.ExperaincesBasePrice</div>
                          </div>
                      </a>
                      <a class="d-flex text-reset text-decoration-none hover-animate" href="tour/gallery/@featured.TourId">
                          <div class="icon-rounded bg-white opacity-7 flex-shrink-0 me-4">
                            <i class="fa-solid fa-images icons"></i>
                          </div>
                          <div>
                            <h5>Gallery</h5>
                            <p>See more</p>
                          </div>
                      </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
@code {
    private FeaturedTour featured = new FeaturedTour(); 

    protected override async Task OnInitializedAsync()
    {
        featured = await TourService.GetFeaturedTour();
    }
}
